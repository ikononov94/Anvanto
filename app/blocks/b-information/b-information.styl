.information
	padding 42px 0
.information-products
	display flex
	flex-wrap wrap
	position relative
	cursor pointer
.information-product
	&:nth-child(4)
		position absolute
		top 370px
	&:nth-child(5)
		position absolute
		right 0
		top 370px
	&:nth-child(2)
		position relative
	&:nth-child(3)
		height 370px
		position relative
		
.product-info
	position absolute
	top 119px
	left 193px
	h5
		margin 8px 0 34px 0
		font-size 1.36rem
		line-height 1.25

.product-info__clothes
	font-family Roboto-med
	color #96989b
	font-size 1.05rem
.product-info__price
	font-family Roboto-reg
	font-size 1.69rem
	font-weight 700
	
.product-info2
	position absolute
	top 19px
	left 101px
	h5
		font-family Roboto-reg
		font-size 1.43rem
		text-transform uppercase
.btn-shop-now
	position absolute
	text-transform uppercase
	background-color #000
	font-size .95rem
	left 118px
	bottom 78px
	padding 15px 33px
.product-info3
	position absolute
	top 34px
	right 48px
	h5
		font-family EyesWOPU
		font-size 4.14rem
		color #fff
		
.product-info__lookbook
	font-family Roboto-bold
	position absolute
	left 146px
	bottom 127px
	color #fff
	font-size 0.86rem
	text-transform uppercase
	letter-spacing 2px
	
.product-info__sale
.product-ingo__disc
	font-family Roboto-med
	position absolute
	right 0
	text-transform uppercase
	color #fff

.product-info__sale
	font-size 0.79rem
	bottom 73px
	background-color #000
	padding 8px 15px
.product-ingo__disc
	font-size 1.43rem
	bottom 24px
	background-color #df0101
	padding 10px 15px
	
@media (min-width 375px) and (max-width 425px)
	.information-product
		left 7%
		&:nth-child(1)
			margin-left 7%
		&:nth-child(2)
			top 270px
		&:nth-child(3)
			top 270px
		&:nth-child(5)
			top 1760px
			
@media (max-width 375px)
	.information-product
		width 90%
		left 0
		&:nth-child(1)
			margin-left 0

@media (max-width 571px)
	.information-product
		left 3%
		&:nth-child(1)
			margin-left 3%
		&:nth-child(2)
			top 270px
		&:nth-child(3)
			top 270px
		&:nth-child(5)
			top 1760px

	