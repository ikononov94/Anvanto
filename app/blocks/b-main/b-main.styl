.main-popular
	padding 60px 0
.main-popular__products
	display flex
	flex-wrap wrap
	justify-content space-between
.main-popular__product
	flex-basis 255px
	position relative
	margin-top 18px
	text-align center
	cursor pointer
	h4	
		margin 15px 0 7px 0
		font-size 1.07rem
	img
		width 255px
	&:nth-child(4)
		margin-right 0
	&:nth-child(8)
		margin-right 0
	&:nth-child(-n+4)
		margin-bottom 15px
	&:hover > .main-popular__product-view 
	&:hover > .main-popular__product-color
		opacity 1
.main-popular__price
	font-family Roboto-med
	font-size 1.5rem
.main-popular__old-price
	font-family Roboto-med
	color #9ca1af
	font-size 1.2rem
	margin-left 5px
	text-decoration line-through
.main-popular__product-discount
	position absolute
	left 3px
	top 3px
	background-color #000
	color #fff
	width 40px
	height 40px
	line-height 3.2
.main-popular__product-new
	position absolute
	text-transform uppercase
	right 2px
	top 3px
	color #000
	border 1px solid #000
	width 40px
	height 40px
	line-height 3.2
.main-popular__title
	text-align center
	text-transform uppercase
	letter-spacing 1.95px

.main-popular__product-view
	opacity 0
	position absolute
	left 67px
	top 112px
	width 120px
	text-align right
	transition all .5s ease
	img
		position absolute
		left 15px
		top 11px
		width 16px
		height 16px
	a
		display block
		background-color #000
		padding 10px 15px

.main-popular__product-color
	position absolute
	left 100px
	bottom 73px
	opacity 0
	transition all .5s ease
	span
		display inline-block
		width 16px
		height 16px
.main-popular__product-color1
	background-color #000
	margin-right 3px
.main-popular__product-color2
	background-color #a8d1ca
	margin-right 3px
.main-popular__product-color3
	background-color #d41616
	
@media (max-width 1020px)
	.main-popular__products
		justify-content space-around
	


		
		
		
	
	
	